// Pixel endcap disks material
// Small disks (108 modules)

Materials FPIX_disk {
  type layer

  // Cooling for the module
  // Average on disk
  Component {
    componentName Cooling
    service false
    scaleOnSensor 0
 
    Element {
      elementName Ti_D1
      quantity 11.45
      unit g
    }
    Element {
      elementName CO2_D1
      quantity 10.8
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 8 pipes per disk
  Component {
    componentName Cooling
    service true
    scaleOnSensor 0
 
    Element {
      elementName FPIX_Ti_D1
      quantity 0.0266
      unit g/m
    }
    Element {
      elementName FPIX_CO2_D1
      quantity 0.026
      unit g/m
    }
  }

  // Power for the module
  // Average on disk
  Component {
    componentName "Power wires D1"
    service false
    scaleOnSensor 0
 
    Element {
      elementName Al_SP_D1
      quantity 4.7
      unit g
    }
    Element {
      elementName Cu_SP_D1
      quantity 0.99
      unit g
    }
    Element {
      elementName PE_SP_D1
      quantity 1
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 12 chains per disk
  Component {
    componentName "Power wires D1"
    service true
    scaleOnSensor 0
 
    Element {
      elementName FPIX_Al_SP_D1
      quantity 0.032
      unit g/m
    }
    Element {
      elementName FPIX_Cu_SP_D1
      quantity 0.0067160494
      unit g/m
    }
    Element {
      elementName FPIX_PE_SP_D1
      quantity 0.006
      unit g/m
    }
  }

  // HV power wires
  // Power for the module
  Component {
    componentName "Sensor HV line"
    service false
    scaleOnSensor 0
 
    Element {
      elementName Al_HV_D1
      quantity 0.393125
      unit g
    }
    Element {
      elementName Cu_HV_D1
      quantity 0.140
      unit g
    }
    Element {
      elementName PE_HV_D1
      quantity 1.41
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 12 chains per disk, 2 wires per chain
  Component {
    componentName "Sensor HV line"
    service true
    scaleOnSensor 0
 
    Element {
      elementName FPIX_Al_HV_D1
      quantity 0.005508
      unit g/m
    }
    Element {
      elementName FPIX_Cu_HV_D1
      quantity 0.0019608
      unit g/m
    }
    Element {
      elementName FPIX_PE_HV_D1
      quantity 0.0198
      unit g/m
    }
